{{!-- {% extends "layouts/main.hbs" %} --}}

        <div>
        <h1>Add Student</h1>
        <form method="POST" action="/student/update">
        <div class="form-group">
                <label>Student Num:</label>
                <input class="form-control" name="studentNum" type="text" value={{}} required/>
            </div>
            <div class="form-group">
                <label>First Name:</label>
                <input class="form-control" name="firstName" type="text" required/>
            </div>
            <div class="form-group">
                <label>Last Name:</label>
                <input class="form-control" name="lastName" type="text" required/>
            </div>
            <div class="form-group">
                <label>Email:</label>
                <input class="form-control" name="email" type="email" required/>
            </div>
            <div class="form-group">
                <label>Street:</label>
                <input class="form-control" name="street" type="text" required/>
            </div>
            <div class="form-group">
                <label>City:</label>
                <input class="form-control" name="city" type="text" required/>
            </div>
            <div class="form-group">
                <label>Province:</label>
                <input class="form-control" name="province" type="text" required/>
            </div>
            <div class="form-group">
                <label>Status:</label>
                <input class="form-control" name="status" type="text" required/>
            </div>
                {{#if courses}}
                <div class="form-group"></div>
                    <select class="form-control" name="course" id="course">
                            <option value="">Select Course</option>
                            {{#each courses}}
                                <option value="{{courseId}}">{{courseCode}}</option>
                            {{/each}}
                    </select>
                {{else}}
                    <div>No Courses</div>
                </div>
                {{/if}}
            <div class="form-group col-md-2">
                <label>TA:</label>
                <input class="form-control" name="TA" type="checkbox"/>
            </div>
            <button type="submit" class="btn btn-primary" onclick= >Add Student</button>
        </form>
        </div>

